<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.keele_v11.LayoutPickerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Choose where you want to post:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp" />
    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Space
            android:layout_width="20px"
            android:layout_height="50px" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:id="@+id/newsfeed"
            android:onClick="buttonClicked"
            android:background="@drawable/newspaper"
            android:textSize="24dp"
            android:text="NewsFeed" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:text="Events"
            android:id="@+id/events"
            android:onClick="buttonClicked2"
            android:background="@drawable/eventspic"
            android:allowUndo="false"
            android:textSize="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:text="Whats Up"
            android:id="@+id/whatsup"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClicked3"
            android:background="@drawable/whatsuppic"
            android:textSize="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="Lost n Found"
            android:id="@+id/lostnfound"
            android:layout_gravity="center_horizontal"
            android:onClick="buttonClicked4"
            android:textSize="24dp"
            android:background="@drawable/lostnfoundpic" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/unlockButton"
            android:background="@drawable/unlock_icon"
            android:layout_gravity="right"
            android:onClick="buttonClicked5" />
    </LinearLayout>

</RelativeLayout>
