<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Card_Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications" />

                <RelativeLayout
                    android:id="@+id/itemSuggest2"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icnews"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="56dp"
                            android:layout_marginStart="56dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/text1a2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="News Feed"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/text2a2"
                                android:layout_width="179dp"
                                android:layout_height="wrap_content"
                                android:text="Get notifications from News feed"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/textSecondary"/>

                        </LinearLayout>

                        <com.suke.widget.SwitchButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="25dp"
                            android:id="@+id/switchNews" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemRate2"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calendar_icon"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="56dp"
                            android:layout_marginStart="56dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/text1b2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Events"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/textPrimary"/>

                            <TextView
                                android:id="@+id/text2b2"
                                android:layout_width="179dp"
                                android:layout_height="wrap_content"
                                android:text="Get notifications from Events"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/textSecondary"/>

                        </LinearLayout>

                        <com.suke.widget.SwitchButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="25dp"
                            android:id="@+id/switchEvents" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemSuggest21"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_loc"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="56dp"
                            android:layout_marginStart="56dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/text1a21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="What&apos;s Up"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/text2a21"
                                android:layout_width="179dp"
                                android:layout_height="wrap_content"
                                android:text="Get notifications from What&apos;s Up"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/textSecondary"/>

                        </LinearLayout>

                        <com.suke.widget.SwitchButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="25dp"
                            android:id="@+id/switchWU" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemSuggestB"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/help"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="56dp"
                            android:layout_marginStart="56dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/text1aA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lost and Found"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/textPrimary" />

                            <TextView
                                android:id="@+id/text2aA"
                                android:layout_width="179dp"
                                android:layout_height="wrap_content"
                                android:text="Get notifications from Lost n Found"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/textSecondary"/>

                        </LinearLayout>

                        <com.suke.widget.SwitchButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="25dp"
                            android:id="@+id/switchLNF" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Card_Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support" />

                <RelativeLayout
                    android:id="@+id/itemSuggestA"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_send_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Suggestions/Feature request"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:id="@+id/text2a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info for author"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/textSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemRate"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_star_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate app"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/text2b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leave rate in Play Store"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/textSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Card_Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_star_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Version"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/text2c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="V-1.0.0"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/textSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_person_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/text2d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/textSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemWeb"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_language_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:id="@+id/text2e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Available yet"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/textSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/itemLibs"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_extension_black_24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_marginStart="56dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text1f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open Source Libraries"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#DD000000"/>

                        <TextView
                            android:id="@+id/text2f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List of used libraries"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#8A000000"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/LogOutBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_dark"
            android:background="@android:color/white"
            android:onClick="onButonClick"
            android:layout_marginBottom="20dp"
            android:textSize="16dp" />

    </LinearLayout>

</ScrollView>
